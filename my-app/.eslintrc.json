{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "react/prop-types": "off",
      "indent": ["error", 4],
      "linebreak-style": "off",
      "max-len": ["error", 120],
      "no-shadow": "off",
      "class-methods-use-this": "off",
      // suppress errors for missing 'import React' in files
      "react/react-in-jsx-scope": "off"
    }
}